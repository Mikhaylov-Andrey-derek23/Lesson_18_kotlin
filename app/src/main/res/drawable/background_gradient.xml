<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/red" android:centerColor="@color/blue" android:endColor="@color/green" android:type="linear"/>
            <stroke  android:width="1dp" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/blue" android:centerColor="@color/green" android:endColor="@color/red" android:type="linear"/>
            <stroke  android:width="1dp" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>
